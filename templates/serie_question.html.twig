                                        {#                                                    aria-controls="collapse-{{ entity }}"> #}
                                        {#                                                Collapsible Group Item #1 #}
                                        {#                                            </button> #}
                                        {#                                        </h4> #}
                                    </div>

                                    <div id="collapse-{{ entity }}" class="collapse"
                                         aria-labelledby="heading-{{ entity }}"
                                         data-parent="#accordionExample">
                                        <div class="card-body">
                                            {% for verset in lists %}

                                                <p class="info-box-text" style="font-size: 26px; font-weight: bold"> Sourate {{ verset.surahnumber }} : {{ verset.surahnamearabic }}</p>
                                                <p class="info-box-text" style="font-size: 22px; margin-left:10px"> verset {{ verset.ayahnumber }} :{{ verset.originalarabictext }} </p>
{#                                                <span class="info-box-text"> {{ verset.originalarabictext }}</span>#}

                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>


                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}


