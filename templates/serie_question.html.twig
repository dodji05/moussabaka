    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="card card-solid">
                    <div class="card-body pb-0">
                        <h3>{{ candidat.mom }}  {{ candidat.prenom }} Voici la liste des questions</h3>

                        <div class="mb-3"></div>
                        <div class="accordion" id="accordionExample">
                            {% for entity, lists in versets %}


                                <div class="card card-primary card-outline">
                                    <div class="card-header" id="heading-{{ entity }}">
                                        <a class="d-block w-100" data-toggle="collapse" href="#collapse-{{ entity }}"
                                           aria-expanded="true">
                                            <div class="card-header">
                                                <h4 class="card-title w-100">
                                                   Questions {{ entity + 1}}
                                                </h4>
                                            </div>
                                        </a>
                                        {#                                        <h4 class="mb-0 card-title w-100"> #}
