        <!-- Main content -->
        <section class="content">


            <!-- Default box -->
            <div class="card card-solid">
                <div class="card-body pb-0">
                    {# Display the search form #}
                    {{ form_start(searchForm) }}
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-10">  {{ form_row(searchForm.search) }} </div>
                            <div class="col-md-2">
                                <div class="mb-3">
