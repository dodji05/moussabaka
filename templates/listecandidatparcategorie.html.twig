                                            </ul>
                                        </div>
                                        <div class="col-5 text-center">
                                            <img src="{{ asset('uploads/candidats/photo/' ~candidat.photo) }}" alt="user-avatar" class="img-circle img-fluid">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">

                                    <div class="text-right">

                                        <a href="{{ path('app_questions_serie',{'id':candidat.id}) }}" class="btn btn-sm btn-primary">
                                            <i class="fas fa-user"></i> View Profile
