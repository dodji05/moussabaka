    $parent.removeClass('has-error');
    if (val == '') {
    $parent.addClass('has-error');
    isvalid = isvalid && false;
}
}
} else if ($el.is('select')) {
    val = $.trim($el.val());
    $parent = $el.closest('.form-group');
    $parent.removeClass('has-error');
    if (val == '') {
    $parent.addClass('has-error');
    isvalid = isvalid && false;
}
} else if ($el.is('textarea')) {
    val = $.trim($el.val());
    $parent = $el.closest('.form-group');
    $parent.removeClass('has-error');
    if (val == '') {
    $parent.addClass('has-error');
    isvalid = isvalid && false;
}
}
});

    return isvalid;
}
</script>
{% endblock %}
