            {#                            <a href="#" class="nav-link">Contact</a> #}
            {#                        </li> #}
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">



            <li class="nav-item dropdown user-menu">
                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                    <img src="{{ asset('uploads/candidats/photo/' ~app.user.photo) }}" class="user-image img-circle elevation-2"
                         alt="admin"/>

                    <span class="d-none d-md-inline">{% if app.user %}
                            {{ app.user.fullName }}

                        {% endif %}

                    </span>
                </a>
                <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                    <!-- User image -->
                    <li class="user-header bg-primary">
                        <img src="{{ asset('uploads/candidats/photo/' ~app.user.photo) }}" class="img-circle elevation-2"
                             alt="admin"/>

                        <p>
                            {% if app.user %}
                                {{ app.user.fullName }}/{{ app.user.roles[0] }}
                            {% endif %}

                        </p>
                        <p>

                        </p>
                    </li>


                    <!-- Menu Footer-->
                    <li class="user-footer">
                        <a href="{{ path('account_profile_update_by_user') }}"
                           class="btn btn-default btn-flat">{% trans %}Mon Profil{% endtrans %}</a>
                        <a href="{{ path('app_logout') }}"
                           class="btn btn-default btn-flat float-right">{% trans %}Déconnexion{% endtrans %}</a>
                    </li>
                </ul>
            </li>

            <li class="nav-item">
                <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                    <i class="fas fa-expand-arrows-alt"></i>
                </a>
            </li>

        </ul>
    </nav>

    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="#" class="brand-link">
            <img src="{{ asset('assets/img/AdminLTELogo.png') }}" alt="AdminLTE Logo"
                 class="brand-image img-circle elevation-3" style="opacity: .8">
            <span class="brand-text font-weight-light">Moussabaka</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                    data-accordion="false">
                    <!-- Add icons to the links using the .nav-icon class
                         with font-awesome or any other icon font library -->

                    <li class="nav-item menu-open">
                        {% if app.user %}
                            {% if   is_granted('ROLE_ADMINISTRATEUR') %}

                                <a href="#" class="nav-link {% if app.request.get('_route') starts with 'app_register' %} active {% endif %} or
                            {% if app.request.get('_route') starts with 'app_user_index' %} active {% endif %}">
                                    <i class="nav-icon fas fa-users"></i>
                                    <p>
                                        Utilsateurs
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">

                                    <li class="nav-item">
                                        <a href="{{ path('app_register') }}" class="nav-link {% if app.request.get('_route') starts with 'app_register' %} active {% endif %}">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Ajouter un utilisateur</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="{{ path('app_user_index') }}" class="nav-link {% if app.request.get('_route') starts with 'app_user_index' %} active {% endif %}">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Liste des utilisateurs</p>
                                        </a>
                                    </li>

                                </ul>



                    <li class="nav-item menu-open">
                        <a href="#"
                           class="nav-link {% if app.request.get('_route') starts with 'app_categorie_candidats_index' %} active {% endif %} or {% if app.request.get('_route') starts with 'app_candidat_index' %} active {% endif %}
or {% if app.request.get('_route') starts with 'app_candidat_new' %} active {% endif %}">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>
                                Candidat
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="{{ path('app_categorie_candidats_index') }}"
                                   class="nav-link {% if app.request.get('_route') starts with 'app_categorie_candidats_index' %} active {% endif %}">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Categorie</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('app_candidat_index') }}"
                                   class="nav-link {% if app.request.get('_route') starts with 'app_candidat_index' %} active {% endif %}">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Liste des candidats</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('app_candidat_new') }}"
                                   class="nav-link {% if app.request.get('_route') starts with 'app_candidat_new' %} active {% endif %}">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Ajouter un candidat</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item menu-open">
                        <a href="#" class="nav-link {% if app.request.get('_route') starts with 'app_annee_index' %} active {% endif %} or {% if app.request.get('_route') starts with 'app_annee_new' %} active {% endif %}">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>
                                Annee
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="{{ path('app_annee_index') }}" class="nav-link {% if app.request.get('_route') starts with 'app_annee_index' %} active {% endif %}">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Liste des années</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('app_annee_new') }}" class="nav-link {% if app.request.get('_route') starts with 'app_annee_new' %} active {% endif %}">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Ajouter une année</p>
                                </a>
                            </li>

                        </ul>
                    </li>
                    <li class="nav-item menu-open">
                        <a href="#" class="nav-link {% if app.request.get('_route') starts with 'app_jury_index' %} active {% endif %} or {% if app.request.get('_route') starts with 'app_jury_new' %} active {% endif %}">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>
                                Jury
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="{{ path('app_jury_index') }}" class="nav-link {% if app.request.get('_route') starts with 'app_jury_index' %} active {% endif %}">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Liste des jury</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('app_jury_new') }}" class="nav-link {% if app.request.get('_route') starts with 'app_jury_new' %} active {% endif %}">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Ajouter un jury</p>
                                </a>
                            </li>

                        </ul>
                    </li>




                    {% endif %}

                    {% if is_granted('ROLE_MEMBRE_JURY') %}
                        <li class="nav-item menu-open">
                            <a href="#" class="nav-link {% if app.request.get('_route') starts with 'app_notes_liste_participant' %} active {% endif %}  ">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Notation Candidat
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="{{ path('app_notes_liste_participant') }}" class="nav-link {% if app.request.get('_route') starts with 'app_notes_liste_questions' %} active {% endif %}">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Noter Candidat</p>
                                    </a>
                                </li>

                            </ul>
                        </li>
                        {% endif %}
                        {% endif %}
                    </li>

                </ul>
            </nav>
